{
  "name": "cloud-backend-test",
  "version": "0.2.0",
  "description": "Be sure to read **all** of this document carefully, and follow the guidelines within.",
  "main": "index.js",
  "scripts": {
    "start:prod": "NODE_ENV=production node dist/main/server.js",
    "start:dev": "NODE_ENV=development ts-node --transpile-only -r tsconfig-paths/register src/main/server.ts",
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "postbuild": "copyfiles -y 1 .env dist/",
    "test": "jest --passWithNoTests",
    "test:unit": "npm test -- --watch -c jest-unit-config.js",
    "test:integration": "npm test -- --watch -c jest-integration-config.js",
    "test:staged": "npm test --findRelatedTests",
    "test:ci": "npm test -- --coverage",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DiegoSalas27/cloud-backend-test.git"
  },
  "keywords": [],
  "author": "Diego Salas Noain <dominicsc2hs@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/DiegoSalas27/cloud-backend-test/issues"
  },
  "homepage": "https://github.com/DiegoSalas27/cloud-backend-test#readme",
  "devDependencies": {
    "@faker-js/faker": "^7.3.0",
    "@types/express": "^4.17.13",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^28.1.6",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^18.6.4",
    "@types/node-fetch": "^2.6.2",
    "@types/supertest": "^2.0.12",
    "copyfiles": "^2.4.1",
    "eslint-config-standard-with-typescript": "^22.0.0",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "lint-staged": "^13.0.3",
    "rimraf": "^3.0.2",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1"
  },
  "dependencies": {
    "apollo-server-express": "^3.10.0",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "graphql": "^15.8.0",
    "module-alias": "^2.2.2",
    "node-fetch": "^2.6.6",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1"
  },
  "_moduleAliases": {
    "@presentation": "dist/presentation",
    "@domain": "dist/domain",
    "@data": "dist/data",
    "@infrastructure": "dist/infrastructure",
    "@main": "dist/main"
  }
}